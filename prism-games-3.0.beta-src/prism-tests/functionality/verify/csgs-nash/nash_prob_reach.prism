csg

player p2
        m2
endplayer

player p1
        m1
endplayer

module m1
	
	r1 : [0..1];
	s1 : [0..4] init 0;

	[a1,a2] s1=0 -> 0.5 : (s1'=1) & (r1'=1) + 0.5 : (s1'=1); 
	[a1,b2] s1=0 -> (s1'=1);  
	[b1,a2] s1=0 -> (s1'=1);  
	[b1,b2] s1=0 -> (s1'=1);  

	[a1] s1>0 -> 0.5 : (s1'=min(4,s1+1)) + 0.5 : true;

endmodule

module m2

	r2 : [0..1];
	s2 : [0..4] init 0;

	[a2,a1] s2=0 -> (s2'=1);
	[b2,a1] s2=0 -> (s2'=1);  
	[a2,b1] s2=0 -> (s2'=1);  
	[b2,b1] s2=0 -> 0.75 : (s2'=1) & (r2'=1) + 0.25 : (s2'=1);
	
	[a2] s2>0 -> 0.75 : (s2'=min(4,s2+1)) + 0.25 : true;
	
endmodule
