// Simple game (MDP) from svi paper only max-player

smg

global state: [0..3] init 0;

player P1 player1, [alpha], [beta], [gamma] endplayer


module player1
	[alpha] state=0 -> (state'=1);
	[beta] state=1 -> (state'=0);
	[gamma] state=1 -> 1/3 : (state'=1) + 1/3 : (state'=2) + 1/3 : (state'=3);
	[] state=2 -> (state'=2);
	[] state=3 -> (state'=3);
endmodule


//Labels
formula done = state=2;
label "p1win" = done;
