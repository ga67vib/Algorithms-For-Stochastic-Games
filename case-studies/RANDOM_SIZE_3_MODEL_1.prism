smg

global state: [0..2];

player P1 player1 endplayer
player P2 player2, [b1], [b2] endplayer

module player1
	[] state=2 -> 1 : (state'=2);
endmodule

module player2
	[b1] state=0 -> 1/2 : (state'=1) + 1/2 : (state'=0);
	[b2] state=0 -> 1 : (state'=2);
	[] state=1 -> 1 : (state'=2);
endmodule

//Labels
label "p1win" = state=2;