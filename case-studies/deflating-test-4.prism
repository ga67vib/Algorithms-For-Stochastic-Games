// Simple game (MDP) from svi paper only max-player

smg

global state: [0..5] init 2;

player P1 player1, [alpha], [beta], [gamma] endplayer
player P2 player2, [alpha2] endplayer

module player1
	[alpha] state=0 -> 1/2 : (state'=1) + 1/2 : (state'=2);
	[beta] state=1 -> 1/2 : (state'=0) + 1/2 : (state'=2);
	[gamma] state=2 -> (state'=1);
	[delta] state=2 -> 1/2 : (state'=3) + 1/2 : (state'=4);
	[] state=3 -> (state'=3);
endmodule

module player2
	[] state=4 -> (state'=4);
	[alpha2] state=5 -> (state'=5);
endmodule


//Labels
formula done = state=3;
label "p1win" = done;
